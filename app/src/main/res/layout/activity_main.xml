<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:paddingRight="30dp"
            android:layout_weight="1"
            android:textColor="@color/red"
            android:layout_gravity="end"
            android:textSize="45sp"
            android:id="@+id/quest"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:paddingRight="30dp"
            android:layout_weight="1"
            android:textColor="@color/teal"
            android:layout_gravity="end"
            android:textSize="50sp"
            android:id="@+id/soln"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="7">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/btntxtSize"
                android:background="@null"
                android:textColor="@color/red"
                android:text="CE"
                android:onClick="tapclr"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/btntxtSize"
                android:background="@null"
                android:textColor="@color/teal"
                android:text="()"
                android:onClick="tapbracket"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:onClick="tapexp"
                android:text="^"
                android:textColor="@color/teal"
                android:textSize="@dimen/btntxtSize" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/btntxtSize"
                android:background="@null"
                android:textColor="@color/teal"
                android:text="/"
                android:onClick="tapdiv"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/btntxtSize"
                android:background="@null"
                android:textColor="@color/white"
                android:text="7"
                android:onClick="tap7"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/btntxtSize"
                android:background="@null"
                android:textColor="@color/white"
                android:text="8"
                android:onClick="tap8"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/btntxtSize"
                android:background="@null"
                android:textColor="@color/white"
                android:text="9"
                android:onClick="tap9"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/btntxtSize"
                android:background="@null"
                android:textColor="@color/teal"
                android:text="*"
                android:onClick="tapmult"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/btntxtSize"
                android:background="@null"
                android:textColor="@color/white"
                android:text="4"
                android:onClick="tap4"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/btntxtSize"
                android:background="@null"
                android:textColor="@color/white"
                android:text="5"
                android:onClick="tap5"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/btntxtSize"
                android:background="@null"
                android:textColor="@color/white"
                android:text="6"
                android:onClick="tap6"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/btntxtSize"
                android:background="@null"
                android:textColor="@color/teal"
                android:text="-"
                android:onClick="tapsub"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/btntxtSize"
                android:background="@null"
                android:textColor="@color/white"
                android:text="1"
                android:onClick="tap1"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/btntxtSize"
                android:background="@null"
                android:textColor="@color/white"
                android:text="2"
                android:onClick="tap2"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/btntxtSize"
                android:background="@null"
                android:textColor="@color/white"
                android:text="3"
                android:onClick="tap3"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/btntxtSize"
                android:background="@null"
                android:textColor="@color/teal"
                android:text="+"
                android:onClick="tapadd"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/btntxtSize"
                android:background="@null"
                android:textColor="@color/teal"
                android:text="."
                android:onClick="tapdot"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/btntxtSize"
                android:background="@null"
                android:textColor="@color/white"
                android:text="0"
                android:onClick="tap0"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="40sp"
                android:background="@null"
                android:textColor="@color/colorPrimaryDark"
                android:text="="
                android:onClick="tapeql"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>